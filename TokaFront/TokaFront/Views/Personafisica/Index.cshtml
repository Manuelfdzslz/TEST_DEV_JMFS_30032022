@model IEnumerable<TokaFront.Models.PersonasFisica>
@{
    Layout = "_Layout";
    ViewData["Title"] = " Persona Fisica";
}

<div class="container">
    <div class=" row">
        <div class="col-md-12  text-right p-3">
            <button type="button" class="btn btn-primary"> agregar</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table id="personaFisicaTable" class="stripe" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>RFC</th>
                        <th>FechaNacimiento</th>
                        <th>Estatus</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.Nombre</td>
                            <td>@m.ApellidoPaterno</td>
                            <td>@m.ApellidoMaterno</td>
                            <td>@m.RFC</td>
                            <td>@m.FechaNacimiento</td>
                            <td>
                                @if (m.Activo.Value)
                                {
                                    <span> Activo </span>
                                }
                                else
                                {
                                    <span> Activo </span>

                                }
                            </td>
                            <td>
                                <a href"#" title="detalle" onclick="detail('@m.IdPersonaFisica')"><span class="material-icons">visibility</span></a>
                                <a href"#" title="editar" onclick="edit('@m.IdPersonaFisica')"><span class="material-icons">edit</span></a>
                                <a href"#" title="eliminar" onclick="delete('@m.IdPersonaFisica')"><span class="material-icons">delete_outline</span></a>
                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>RFC</th>
                        <th>FechaNacimiento</th>
                        <th>Estatus</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>


</div>
@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/js/PersonaFisica.js" asp-append-version="true"></script>
}
